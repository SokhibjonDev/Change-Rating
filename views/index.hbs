                    <th style="color: #fff;">O'qiyotgan oyi</th>
                    <th style="color: #fff;">O'zgartirish</th>
                </tr>
            </thead>

            {{#if people.length}}
            {{#each people}}

            <tr class="tr">
                <td class="top">1</td>
                <td>{{name}} {{surname}}</td>
                <td>{{score}}</td>
                <td {{!-- style="text-align: start;" --}}><a href="tel:{{number}}">{{number}}</a></td>
                <td>{{group}}</td>
                <td>{{month}}</td>
                <td class="btn" style="display: flex; margin-right: -200px;">
                    <a href="/people/{{id}}" class="edit" ><img width="14px" src="/img/pencil.png" alt=""></a>
