            </tr>

            {{/each}}
            {{else}}
            <h2>O'quvchilar yo'q</h2>
            {{/if}}
        </table>
        <div class="pagination">
            <ul class="row justify-content-center">
                {{#each sum}}
                <li><a href="/{{.}}">{{.}}</a></li>
                {{/each}}
            </ul>
        </div>
</div>

