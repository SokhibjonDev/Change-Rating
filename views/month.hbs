<div class="container">
    <table>
    <tr>
        <th>No</th>
        <th>Name/Surname</th>
        <th>Score</th>
        <th>Group</th>
        <th>Month</th>
        <th>Edit</th>
    </tr>
    {{#if findPeople.length}}
    {{#each findPeople}}
    <tr>
        <td class="top">1</td>
        <td>{{name}} {{surname}}</td>
        <td>{{score}}</td>
        <td>{{group}}</td>
        <td>{{month}}</td>
        <td class="btn"><a href="/people/{{id}}" class="edit">Edit</a></td>
    </tr>
    {{/each}}
    {{else}}
    <h2 class="empty">O'quvchilar yoq</h2>
    {{/if}}
</table>
</div>